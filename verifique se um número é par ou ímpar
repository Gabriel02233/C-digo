

def is_even_or_odd():
    number = input("Enter a number: ")
    try:
        number = int(number)
        if number % 2 == 0:
            print(str(number) + " is Even")
        else:
            print(str(number) + " is Odd")
    except:
        print("Invalid input, please enter a number")

is_even_or_odd()
